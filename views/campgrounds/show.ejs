<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <figure class="figure camp">  
                <img class="figure-img img-thumbnail" style="border-top-right-radius:1rem; border-top-left-radius:1rem;" src="<%= campground.image %>">
                <div class="container">
                    <h5 class="float-right"> $9.00/night</h5>
                    <a href=""><h4><%=campground.name%></h4></a>
                    <figcaption class="figure-caption"> <%= campground.description %> </figcaption>
                </div>
            </figure>
            <a href="/campgrounds">Go Back</a>
            <hr>
            <div class="text-right">
                <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>/comments/new" >Add new comment</a>
            </div>
            <div class="bg-grey" style="margin-top: 15px">
                <div class="card-body rounded">
                    <% campground.comments.forEach(function(comment){ %>
                        <div class="row"> 
                            <div class="col-md-12">
                                <strong> <%= comment.author %> </strong>
                                <span class="text-right float-right">10 days ago</span>  
                                <p> 
                                    <%= comment.text %> 
                                </p>  
                            </div>   
                        </div>
                        <hr>
                    <% }); %>     
                </div>
            </div>  
        </div>
    </div>
</div>

<% include ../partials/footer %>