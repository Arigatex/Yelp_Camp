<% include partials/header %>

<div class="container">

    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to Yelp Camp!</h1>    
            <p>View our handpicked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Submit a new camp</a>
            </p>
        </div>
    </header>
    
    <a href="/">Go Back</a>
    
    <div class="row text-center">
        <% campgrounds.forEach(function(campground){ %>
        <div class="col-md-3 col-sm-6"> 
            <img class="img-thumbnail" src="<%= campground.image %>">
                <div>
                    <h4> <%= campground.name %> </h4> 
                </div>
                <p>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More info</a>
                </p>
        </div>
        <% }); %>
    </div>
        
</div>

<% include partials/footer %>
